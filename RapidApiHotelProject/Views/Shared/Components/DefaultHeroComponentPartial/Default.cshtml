@model HotelSearchViewModel

<style>
    .scroll-select {
        max-height: 200px;
        overflow-y: auto;
    }
</style>



<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>Sona A Luxury Hotel</h1>
                    <p>
                        Here are the best hotel booking sites, including recommendations for international
                        travel and for finding low-priced hotel rooms.
                    </p>
                    <a href="#" class="primary-btn">Discover Now</a>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                <div class="booking-form">
                    <h3>Booking Your Hotel</h3>
                    <form asp-action="HotelDetails" asp-controller="Booking" method="post">

                        <div class="select-option">
                            <label>Cities</label>
                            <select asp-for="DestinationId" asp-items="@ViewBag.cities">
                                <option value="">Select City</option>
                            </select>
                        </div>

                    
                        <div class="check-date">
                            <label>Check In:</label>
                            <input type="date" asp-for="ArrivalDate" class="form-control" required />
                        </div>
                        <div class="check-date">
                            <label>Check Out:</label>
                            <input type="date" asp-for="DepartureDate" class="form-control" required />
                        </div>
                        <div class="select-option">
                            <label>Adults:</label>
                            <select asp-for="Adults" class="form-control" size="10">
                                <option value="1">1 Adult</option>
                                <option value="2">2 Adults</option>
                                <option value="3">3 Adults</option>
                            </select>
                        </div>
                        <div class="select-option">
                            <label>Children Age (comma separated):</label>
                            <input type="text" asp-for="ChildrenAge" class="form-control" value="0" placeholder="e.g. 1,17" />
                        </div>
                        <div class="select-option">
                            <label>Room Count:</label>
                            <select asp-for="RoomQty" class="form-control">
                                <option value="1">1 Room</option>
                                <option value="2">2 Rooms</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Check Availability</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="hero-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-1.jpg"> </div>
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-2.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-3.jpg"></div>
    </div>
</section>
